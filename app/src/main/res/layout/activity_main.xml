<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/guideLine2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_story"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="@drawable/user_story"
                app:layout_constraintEnd_toStartOf="@id/asset_story_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/user_story_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerita Anda"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/user_story"
                app:layout_constraintEnd_toStartOf="@id/assets_1_txt"
                android:layout_marginEnd="31dp"/>

            <ImageView
                android:id="@+id/asset_story_1"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="@drawable/asset_story"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/liga_story_1"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/assets_1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assets"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/asset_story_1"
                app:layout_constraintEnd_toStartOf="@id/liga_story_1_txt"
                android:layout_marginEnd="51dp"/>

            <ImageView
                android:id="@+id/liga_story_1"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="@drawable/liga_story"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/liga_story_1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liga"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/liga_story_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/asset_story_2"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="@drawable/asset_story"
                app:layout_constraintStart_toEndOf="@id/liga_story_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/assets_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assets"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/asset_story_2"
                app:layout_constraintStart_toEndOf="@id/liga_story_1_txt"
                android:layout_marginStart="51dp"/>

            <ImageView
                android:id="@+id/liga_story_2"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="@drawable/liga_story"
                app:layout_constraintStart_toEndOf="@id/asset_story_2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/liga_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liga"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/liga_story_2"
                app:layout_constraintStart_toEndOf="@id/assets_2_txt"
                android:layout_marginStart="51dp"/>

            <ImageView
                android:id="@+id/fufufafa_pp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/fufufafa_pp"
                app:layout_constraintTop_toBottomOf="@id/user_story_txt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/fufufafa_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fufufafa"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/fufufafa_pp"
                app:layout_constraintTop_toBottomOf="@id/user_story_txt"
                android:layout_marginTop="18dp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="putra Mulyono"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/fufufafa_pp"
                app:layout_constraintTop_toBottomOf="@id/fufufafa_txt"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/titik_tiga_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_titik_tiga"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/liga_2_txt"
                android:layout_marginTop="32dp"/>

            <ImageView
                android:id="@+id/fufufafa_content"
                android:layout_width="415dp"
                android:layout_height="415dp"
                android:background="@drawable/post_fufufafa"
                app:layout_constraintTop_toBottomOf="@id/fufufafa_pp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/like_icon_fufufafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_heart"
                app:layout_constraintTop_toBottomOf="@id/fufufafa_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/coment_icon_fufufafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_comment"
                app:layout_constraintTop_toBottomOf="@id/fufufafa_content"
                app:layout_constraintStart_toEndOf="@id/like_icon_fufufafa"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/share_icon_fufufafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share"
                app:layout_constraintTop_toBottomOf="@id/fufufafa_content"
                app:layout_constraintStart_toEndOf="@id/coment_icon_fufufafa"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/save_icon_fufufafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share"
                app:layout_constraintTop_toBottomOf="@id/fufufafa_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/disukaioleh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/like_icon_fufufafa"
                android:text="Disukai oleh Ikhwan_Hanif"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/like_icon_fufufafa"/>

            <TextView
                android:id="@+id/fufufafa_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fufufafa"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/disukaioleh"
                app:layout_constraintTop_toBottomOf="@id/disukaioleh"/>

            <TextView
                android:id="@+id/hashtag_fufufafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Proud"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/disukaioleh"
                app:layout_constraintStart_toEndOf="@id/fufufafa_desc"
                android:layout_marginTop="4dp"
                android:textColor="#3EA9E5"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/tampilkanKomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tampilkan 10 komentar lainnya"
                app:layout_constraintTop_toBottomOf="@+id/fufufafa_desc"
                app:layout_constraintStart_toStartOf="@id/fufufafa_desc"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/assets_pp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/assets_ugm_pp"
                app:layout_constraintTop_toBottomOf="@id/tampilkanKomen"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/asstes_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_ugm"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/assets_pp"
                app:layout_constraintTop_toBottomOf="@id/tampilkanKomen"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sekolah Vokasi Universitas Gadjah Mada"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/assets_pp"
                app:layout_constraintTop_toBottomOf="@id/asstes_txt"
                android:layout_marginStart="4dp"/>








        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <LinearLayout
        android:id="@+id/linear_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideLine2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/home_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_active"
            android:layout_marginRight="56dp"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            android:layout_marginRight="56dp"/>
        <ImageView
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_upload"/>
        <ImageView
            android:id="@+id/reels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_reels"
            android:layout_marginLeft="56dp"/>
        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_profile"
            android:layout_marginLeft="56dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>